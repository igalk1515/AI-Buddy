{
  "manifest_version": 3,
  "name": "TL;DR Buddy",
  "version": "1.0",
  "description": "Summarize selected text using GPT-4o. Supports RTL and multi-language input.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "tldr-buddy.css",
        "icons/icon16.png",
        "icons/icon48.png",
        "icons/icon64.png",
        "icons/icon128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
